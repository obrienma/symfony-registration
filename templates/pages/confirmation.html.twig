{% extends "base.html.twig" %}

{% block body %}
    <div class="bg-gradient-to-br from-blue-50 via-blue-100 to-blue-200 py-8 sm:py-12 px-4 min-h-screen flex items-center justify-center">
        <div class="max-w-md w-full">
            <!-- Success Card -->
            <div class="bg-white rounded-lg sm:rounded-2xl shadow-xl overflow-hidden">
                <!-- Header Section with Gradient -->
                <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-6 sm:p-8 text-center">
                    <div class="inline-flex items-center justify-center w-16 h-16 sm:w-20 sm:h-20 bg-white rounded-full mb-4">
                        <span class="text-4xl sm:text-5xl">ğŸ‰</span>
                    </div>
                    <h1 class="text-2xl sm:text-3xl font-bold text-white mb-2">Success!</h1>
                    <p class="text-green-50 text-sm sm:text-base">{{ pet.name }} has been registered</p>
                </div>

                <!-- Pet Details Card -->
                <div class="p-6 sm:p-8">
                    <!-- Pet Icon based on type -->
                    <div class="flex items-center gap-3 mb-6 pb-6 border-b border-gray-200">
                        <div class="flex-shrink-0 w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-blue-100 to-purple-100 rounded-full flex items-center justify-center">
                            <span class="text-2xl sm:text-3xl">{{ pet.petType.value == 'cat' ? 'ğŸ±' : 'ğŸ¶' }}</span>
                        </div>
                        <div class="flex-1">
                            <h2 class="text-xl sm:text-2xl font-bold text-gray-900">{{ pet.name }}</h2>
                            <p class="text-sm text-gray-500 capitalize">{{ pet.petType.value }} â€¢ {{ pet.breed.name }}</p>
                            {% if pet.breed.isDangerous %}
                            <span class="inline-flex items-center gap-1 mt-2 px-2 py-0.5 bg-amber-100 text-amber-700 text-xs font-medium rounded-full">
                                âš ï¸ Dangerous Breed
                            </span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Details Grid -->
                    <div class="space-y-4">
                        <!-- Breed -->
                        <div class="grid grid-cols-[120px_1fr] gap-30 py-3 border-b border-gray-100">
                            <span class="text-gray-400 text-sm font-medium">Breed</span>
                            <span class="text-gray-900 font-semibold text-right">{{ pet.breed.name }}</span>
                        </div>

                        <!-- Age -->
                        <div class="grid grid-cols-[120px_1fr] gap-20 items-center py-3 border-b border-gray-100">
                            <span class="text-gray-400 text-sm font-medium">Age</span>
                            <span class="text-gray-900 font-semibold text-right">
                                {% if pet.birthDateIsExact %}
                                    {% set age = date().diff(pet.birthDate) %}
                                    {{ age.y > 0 ? age.y ~ ' year' ~ (age.y != 1 ? 's' : '') : 'Less than 1 year' }}
                                {% else %}
                                    {% set age = date().diff(pet.birthDate) %}
                                    ~{{ age.y }} year{{ age.y != 1 ? 's' : '' }}
                                {% endif %}
                            </span>
                        </div>

                        <!-- Birth Date -->
                        {% if pet.birthDateIsExact %}
                        <div class="grid grid-cols-[120px_1fr] gap-20 items-center py-3 border-b border-gray-100">
                            <span class="text-gray-400 text-sm font-medium">Birth Date</span>
                            <span class="text-gray-900 font-semibold text-right">
                                {{ pet.birthDate|date('F j, Y') }}
                            </span>
                        </div>
                        {% endif %}

                        <!-- Gender -->
                        <div class="grid grid-cols-[120px_1fr] gap-20 items-center py-3">
                            <span class="text-gray-400 text-sm font-medium">Gender</span>
                            <span class="text-gray-900 font-semibold capitalize text-right">
                                {{ pet.gender.value == 'female' ? 'â™€' : 'â™‚' }} {{ pet.gender.value }}
                            </span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-8">
                        <a href="{{ path('app') }}" class="block w-full py-3.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all text-center transform hover:-translate-y-0.5">
                            â• Register Another Pet
                        </a>
                    </div>
                </div>
            </div>

            <!-- Footer Note -->
            <div class="text-center mt-6 px-4">
                <p class="text-sm text-gray-600">
                    ğŸˆ Registration ID: <span class="font-mono font-semibold text-gray-800">#{{ pet.id }}</span>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
