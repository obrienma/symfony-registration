{% macro errorClass(errors, field) %}
    {% if errors[field] is defined %}border-red-500{% else %}border-gray-300{% endif %}
{% endmacro %}

{% macro errorMessage(errors, field) %}
    {% if errors[field] is defined %}
        <p class="mt-1 text-sm text-red-600">{{ errors[field] }}</p>
    {% endif %}
{% endmacro %}

<div{{ attributes }} class="max-w-md mx-auto p-4 sm:p-6 bg-white sm:rounded-lg sm:shadow-sm">
    <!-- Pet paw icons header -->
    <div class="flex justify-between mb-6 items-center">
        <twig:ux:icon name="mdi:paw" class="w-8 h-8 text-blue-600 rotate-90" />
        <twig:ux:icon name="mdi:paw" class="w-8 h-8 text-blue-600 rotate-90 translate-y-3" />
        <twig:ux:icon name="mdi:paw" class="w-8 h-8 text-blue-400 opacity-60 rotate-90" />
        <twig:ux:icon name="mdi:paw" class="w-8 h-8 text-blue-400 opacity-40 rotate-90 translate-y-3" />
        <twig:ux:icon name="mdi:paw" class="w-8 h-8 text-blue-400 opacity-40 rotate-90" />
        <twig:ux:icon name="mdi:paw" class="w-8 h-8 text-blue-400 opacity-40 rotate-90 translate-y-3" />
        <twig:ux:icon name="mdi:paw" class="w-8 h-8 text-blue-400 opacity-40 rotate-90" />
    </div>

    <h1 class="text-xl sm:text-2xl font-semibold text-blue-700 mb-6">Tell us about your pet</h1>

    {% if errors is not empty %}
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-sm text-red-800 font-medium">Please fix the following errors:</p>
    </div>
    {% endif %}

    <div>
        <!-- Pet Name Field -->
        <div class="mb-5">
            <label for="petName" class="block text-sm font-medium text-gray-700 mb-2">
                What is your pet's name?
            </label>
            <input
                type="text"
                id="petName"
                data-model="petName"
                placeholder="Monte"
                value="{{ this.petName }}"
                class="w-full px-4 py-2 border {{ _self.errorClass(errors, 'petName') }} rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
            {{ _self.errorMessage(errors, 'petName') }}
        </div>

        <!-- Pet Type Field - Segmented Control -->
        <div class="mb-5">
            <label class="block text-sm font-medium text-gray-700 mb-2">
                Pet Type
            </label>
            <div style="display: inline-flex; border: 1px solid {% if errors.petType is defined %}#ef4444{% else %}#d1d5db{% endif %}; border-radius: 0.5rem; padding: 0.25rem; width: 100%;">
                <input
                    type="radio"
                    id="petType-cat"
                    name="petType"
                    value="cat"
                    data-model="petType"
                    {% if this.petType == 'cat' %}checked{% endif %}
                    style="display: none;"
                    @change="$refresh"
                >
                <label for="petType-cat" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.petType == 'cat' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                    Cat
                </label>
                <input
                    type="radio"
                    id="petType-dog"
                    name="petType"
                    value="dog"
                    data-model="petType"
                    {% if this.petType == 'dog' %}checked{% endif %}
                    style="display: none;"
                    @change="$refresh"
                >
                <label for="petType-dog" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.petType == 'dog' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                    Dog
                </label>
            </div>
            {{ _self.errorMessage(errors, 'petType') }}
        </div>

        <!-- Breed Field - Only visible when petType is selected -->
        {% if this.petType %}
        <div class="mb-5">
            <label for="breedSelect" class="block text-sm font-medium text-gray-700 mb-2">
                What breed are they?
            </label>

            <select
                id="breedSelect"
                data-model="breed"
                data-action="change->live#update"
                class="w-full px-4 py-2 border {{ _self.errorClass(errors, 'breed') }} rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
                <option value="">Select a breed...</option>
                {% for breedEntity in this.getBreedsOrderedByFallback() %}
                    <option value="{{ breedEntity.name }}" {% if this.breed == breedEntity.name %}selected{% endif %}>
                        {{ breedEntity.name }}{% if breedEntity.isFallback %} (fallback){% endif %}
                    </option>
                {% endfor %}
            </select>
            {{ _self.errorMessage(errors, 'breed') }}
        </div>
        {% endif %}

        <!-- Dangerous Breed Warning -->
        {% set selectedBreed = this.getSelectedBreed() %}
        {% if selectedBreed and selectedBreed.getIsDangerous() %}
        <div class="mb-5 p-3 bg-yellow-50 rounded-lg flex items-start gap-2">
            <span class="text-yellow-600 text-lg">⚠️</span>
            <p class="text-sm text-yellow-800">
                <strong>{{ selectedBreed.name }}</strong> is considered dangerous.
            </p>
        </div>
        {% endif %}

        <!-- Age Field -->
        <div class="mb-5">
            <label class="block text-sm font-medium text-gray-700 mb-2">
                How old are they?
            </label>

            <!-- Age Mode Toggle -->
            <div class="mb-3">
                <div style="display: inline-flex; border: 1px solid #d1d5db; border-radius: 0.5rem; padding: 0.25rem; width: 100%;">
                    <input
                        type="radio"
                        id="ageMode-approximate"
                        name="ageMode"
                        value="approximate"
                        data-model="ageMode"
                        {% if this.ageMode == 'approximate' %}checked{% endif %}
                        style="display: none;"
                        @change="$refresh"
                    >
                    <label for="ageMode-approximate" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.ageMode == 'approximate' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                        Approximate
                    </label>
                    <input
                        type="radio"
                        id="ageMode-exact"
                        name="ageMode"
                        value="exact"
                        data-model="ageMode"
                        {% if this.ageMode == 'exact' %}checked{% endif %}
                        style="display: none;"
                        @change="$refresh"
                    >
                    <label for="ageMode-exact" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.ageMode == 'exact' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                        Exact DOB
                    </label>
                </div>
            </div>

            <!-- Approximate Age Dropdown -->
            {% if this.ageMode == 'approximate' %}
            <select
                id="approximateAge"
                data-model="approximateAge"
                class="w-full px-4 py-2 border {{ _self.errorClass(errors, 'approximateAge') }} rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
                <option value="">Select age...</option>
                {% for value, label in this.getAgeOptions() %}
                    <option value="{{ value }}" {% if this.approximateAge == value %}selected{% endif %}>
                        {{ label }}
                    </option>
                {% endfor %}
            </select>
            {{ _self.errorMessage(errors, 'approximateAge') }}
            {% endif %}

            <!-- Exact Birth Date Input -->
            {% if this.ageMode == 'exact' %}
            <input
                type="date"
                id="birthDate"
                data-model="birthDate"
                value="{{ this.birthDate }}"
                max="{{ 'now'|date('Y-m-d') }}"
                class="w-full px-4 py-2 border {{ _self.errorClass(errors, 'birthDate') }} rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
            {{ _self.errorMessage(errors, 'birthDate') }}
            {% endif %}
        </div>

        <!-- Gender Field -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
                What gender are they?
            </label>
            <div style="display: inline-flex; border: 1px solid {% if errors.gender is defined %}#ef4444{% else %}#d1d5db{% endif %}; border-radius: 0.5rem; padding: 0.25rem; width: 100%;">
                <input
                    type="radio"
                    id="gender-female"
                    name="gender"
                    value="female"
                    data-model="gender"
                    {% if this.gender == 'female' %}checked{% endif %}
                    style="display: none;"
                    @change="$refresh"
                >
                <label for="gender-female" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.gender == 'female' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                    Female
                </label>
                <input
                    type="radio"
                    id="gender-male"
                    name="gender"
                    value="male"
                    data-model="gender"
                    {% if this.gender == 'male' %}checked{% endif %}
                    style="display: none;"
                    @change="$refresh"
                >
                <label for="gender-male" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.gender == 'male' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                    Male
                </label>
            </div>
            {{ _self.errorMessage(errors, 'gender') }}
        </div>

        <!-- Continue Button -->
        <button
            type="button"
            data-action="click->live#action"
            data-live-action-param="submit"
            class="w-full py-3 bg-gray-300 text-gray-600 font-semibold rounded-lg hover:bg-gray-400 transition-colors"
        >
            Continue
        </button>
    </div>
</div>
