<div{{ attributes }} class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-sm">
    <!-- Pet paw icons header -->
    <div class="flex gap-2 mb-6 justify-center">
        <span class="text-lg">ğŸ¾</span>
        <span class="text-lg">ğŸ¾</span>
        <span class="text-lg opacity-40">ğŸ¾</span>
        <span class="text-lg opacity-40">ğŸ¾</span>
        <span class="text-lg opacity-40">ğŸ¾</span>
        <span class="text-lg opacity-40">ğŸ¾</span>
        <span class="text-lg opacity-40">ğŸ¾</span>
    </div>

    <h1 class="text-2xl font-semibold text-blue-600 mb-6 text-center">Tell us about your pet</h1>

    <form data-action="live#action" data-action-param="submit">
        <!-- Pet Name Field -->
        <div class="mb-6">
            <label for="petName" class="block text-sm font-medium text-gray-700 mb-2">
                What is your pet's name?
            </label>
            <input
                type="text"
                id="petName"
                data-model="petName"
                placeholder="Monte"
                value="{{ this.petName }}"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
        </div>

        <!-- Pet Type Field - Segmented Control -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-3">
                Pet Type
            </label>
            <div style="display: inline-flex; border: 1px solid #d1d5db; border-radius: 0.5rem; padding: 0.25rem; width: 100%;">
                <input
                    type="radio"
                    id="petType-cat"
                    name="petType"
                    value="cat"
                    data-model="petType"
                    {% if this.petType == 'cat' %}checked{% endif %}
                    style="display: none;"
                    @change="$refresh"
                >
                <label for="petType-cat" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.petType == 'cat' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                    Cat
                </label>
                <input
                    type="radio"
                    id="petType-dog"
                    name="petType"
                    value="dog"
                    data-model="petType"
                    {% if this.petType == 'dog' %}checked{% endif %}
                    style="display: none;"
                    @change="$refresh"
                >
                <label for="petType-dog" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.petType == 'dog' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                    Dog
                </label>
            </div>
        </div>

        <!-- Breed Field - Only visible when petType is selected -->
        {% if this.petType %}
        <div class="mb-6">
            <label for="breedCombobox" class="block text-sm font-medium text-gray-700 mb-2">
                What breed are they?
            </label>

            <!-- Combobox Container -->
            <div class="relative">
                <input
                    type="text"
                    id="breedCombobox"
                    role="combobox"
                    aria-autocomplete="list"
                    aria-controls="breedListbox"
                    data-model="breed"
                    placeholder="Search breeds..."
                    value="{{ this.breed }}"
                    @input.debounce-300="$refresh"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
                <span class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                    ğŸ”
                </span>

                <!-- Dropdown List -->
                {% set filteredBreeds = this.breed ? this.searchBreeds(this.breed) : this.getFilteredBreeds() %}
                {% if this.breed and filteredBreeds|length == 0 %}
                    <div class="absolute top-full left-0 right-0 mt-1 bg-white border border-gray-300 rounded-lg shadow-lg z-10">
                        <button
                            type="button"
                            @click="breed = 'custom'"
                            class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-700 font-medium"
                        >
                            Can't find it? Save as: "{{ this.breed }}"
                        </button>
                    </div>
                {% elseif filteredBreeds|length > 0 %}
                    <div id="breedListbox" role="listbox" class="absolute top-full left-0 right-0 mt-1 bg-white border border-gray-300 rounded-lg shadow-lg z-10 max-h-64 overflow-y-auto">
                        {% for breed in filteredBreeds %}
                        <button
                            type="button"
                            @click="breed = '{{ breed.name }}'"
                            role="option"
                            class="w-full px-4 py-2 text-left hover:bg-blue-50 focus:bg-blue-100 focus:outline-none transition-colors {% if this.breed == breed.name %}bg-blue-100 text-blue-600{% else %}text-gray-700{% endif %}"
                        >
                            {{ breed.name }}
                        </button>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <!-- Breed Options - Only visible when no matching breed found -->
            {% if this.breed and filteredBreeds|length == 0 %}
            <div class="mt-3 space-y-3">
                <p class="text-xs font-medium text-gray-600">No exact match? Choose one:</p>
                <div class="flex items-center gap-3">
                    <input
                        type="radio"
                        id="breedOption1"
                        name="breedOption"
                        value="Unknown"
                        data-model="breedOption"
                        {% if this.breedOption == 'i-dont-know' %}checked{% endif %}
                        class="w-4 h-4"
                    >
                    <label for="breedOption1" class="text-sm text-gray-700">I don't know</label>
                </div>
                <div class="flex items-center gap-3">
                    <input
                        type="radio"
                        id="breedOption2"
                        name="breedOption"
                        value="Mix"
                        data-model="breedOption"
                        {% if this.breedOption == 'mix' %}checked{% endif %}
                        class="w-4 h-4"
                    >
                    <label for="breedOption2" class="text-sm text-gray-700">It's a mix</label>
                </div>
                <div class="flex items-center gap-3">
                    <input
                        type="radio"
                        id="breedOption3"
                        name="breedOption"
                        value="Other"
                        data-model="breedOption"
                        {% if this.breedOption == 'mix' %}checked{% endif %}
                        class="w-4 h-4"
                    >
                    <label for="breedOption3" class="text-sm text-gray-700">It's another breed</label>
                </div>
            </div>
            {% endif %}
        </div>
        {% endif %}

        <!-- Gender Field -->
        <div class="mb-8">
            <label class="block text-sm font-medium text-gray-700 mb-3">
                What gender are they?
            </label>
            <div style="display: inline-flex; border: 1px solid #d1d5db; border-radius: 0.5rem; padding: 0.25rem; width: 100%;">
                <input
                    type="radio"
                    id="gender-female"
                    name="gender"
                    value="female"
                    data-model="gender"
                    {% if this.gender == 'female' %}checked{% endif %}
                    style="display: none;"
                    @change="$refresh"
                >
                <label for="gender-female" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.gender == 'female' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                    Female
                </label>
                <input
                    type="radio"
                    id="gender-male"
                    name="gender"
                    value="male"
                    data-model="gender"
                    {% if this.gender == 'male' %}checked{% endif %}
                    style="display: none;"
                    @change="$refresh"
                >
                <label for="gender-male" style="flex: 1; padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500; text-align: center; cursor: pointer; transition: all 0.2s; {% if this.gender == 'male' %}background-color: #2563eb; color: white;{% else %}background-color: transparent; color: #374151;{% endif %}">
                    Male
                </label>
            </div>
        </div>

        <!-- Continue Button -->
        <button
            type="button"
            data-action="live#action"
            data-action-param="submit"
            class="w-full py-3 bg-gray-300 text-gray-600 font-semibold rounded-lg hover:bg-gray-400 transition-colors"
        >
            Continue
        </button>
    </form>
</div>
